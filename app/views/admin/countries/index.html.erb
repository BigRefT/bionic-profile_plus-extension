<h1>Countries and Taxes</h1>
<%= render_region :top %>
<div class="list_content">
  <%= render_region :before_list %>
  <table class="list_table">
    <thead>
      <tr>
        <% render_region :list_headers do |list_headers| %>
          <% list_headers.country_column_header do %><th>Country</th><% end %>
          <% list_headers.sub_regions_column_header do %><th>Sub-Regions</th><% end %>
          <% list_headers.actions_column_header do %><th>Actions</th><% end %>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% if @site_countries.length == 0 %>
        <tr><td colspan="<%= admin_interface.countries.index.list_data.length %>" class="no_entries">No Countries</td></tr>
      <% else %>
         <%= render :partial => 'site_country', :collection => @site_countries %>
      <% end %>
    </tbody>
  </table>
  <% render_region :after_list do |after_list| %>
    <% after_list.pagination_links do %>
      <%= empty_pagination_div %>
    <% end %>
  <% end %>
  <div class="action_row">
    <% render_region :action_row do |action_row| %>
      <% action_row.new_site_country do %>
        <%= link_to 'Add Site Country', new_admin_country_path %>
      <% end %>
    <% end %>
  </div>
</div>
<%= render_region :bottom %>