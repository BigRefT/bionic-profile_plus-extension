<% field_set_tag "#{save_label} Address" do -%>
  <% render_region :form_top, :locals => { :f => f } do |form_top| %>
    <% form_top.edit_errors do %>
      <%= error_messages_for :address %>
    <% end %>
  <% end %>
  <% render_region :form, :locals => { :f => f } do |form| %>
    <% form.edit_first_name do %>
      <%= f.text_field :first_name, :label => "First Name:", :required => true %>
    <% end %>
    <% form.edit_last_name do %>
      <%= f.text_field :last_name, :label => "Last Name:", :required => true %>
    <% end %>
    <% form.edit_label do %>
      <%= f.text_field :label, :label => "Label:", :help => "Your label for the address<br />(ie. Home, Work, Billing).", :required => true %>
    <% end %>
    <% form.edit_address_1 do %>
      <%= f.text_field :address_line_1, :label => "Address 1:", :required => true %>
    <% end %>
    <% form.edit_address_2 do %>
      <%= f.text_field :address_line_2, :label => "Address 2:" %>
    <% end %>
    <% form.edit_city do %>
      <%= f.text_field :city, :label => "City:", :required => true %>
    <% end %>
    <% form.edit_country do %>
      <%= f.select :site_country_id, @site_countries.collect { |site_country| [site_country.country.name, site_country.id] }, :label => "Country:", :required => true %>
    <% end %>
    <% form.edit_province do %>
      <%= f.select :site_province_id, @site_provinces.collect { |site_province| [site_province.province.name, site_province.id] }, :include_blank => "&lt;Select One&gt;", :label => "States:", :required => true %>
    <% end %>
    <% form.edit_postal_code do %>
      <%= f.text_field :postal_code, :label => "Zip Code:", :required => true %>
    <% end %>
  <% end %>
  <% render_region :form_bottom, :locals => { :f => f } do |form_bottom| %>
    <% form_bottom.edit_buttons do %>
      <%= f.submit_or_back save_label, edit_admin_profile_path(@address.profile) %>
    <% end %>
  <% end %>
<% end %>